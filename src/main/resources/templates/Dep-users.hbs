{{#partial "content"}}
    <div class="whole-page">
        <h2 class="text-center users-hd">Users</h2>
        <hr>
        <i class="fas fa-plus for-user" data-toggle="modal" data-target="#basicExampleModal"> Add Employee</i>
        <div class="modal fade right" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            {{#if depId}}
            <div class="modal-dialog modal-side modal-top-right" role="document">
                <form action="/Departments/{{id}}/users/new" method="post">
                    <div class="modal-dialog cascading-modal" role="document">
                        <div class="modal-content">
                            <div class="modal-header primary-color white-text">
                                <h4 class="title">
                                    <i class="fas fa-user-plus"></i> Add user to department</h4>
                            </div>

                            <div class="modal-body">

                                <!-- Material input name -->
                                <div class="md-form form-sm">
                                    <i class="fas fa-building"> User Name</i>
                                    <select class="form-control" name="userId">
                                        {{#each allUsers}}
                                            <option value="{{id}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="text-center mt-4 mb-2">
                                    <button class="btn btn-primary" type="submit">Add
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
            {{/if}}
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                </tr>
                </thead>
                <tbody>
                {{#if allUsers}}
                    {{#each allUsers}}
                        <a href="#">
                            <tr class="table-rows">
                                <th scope="row"><i class="fas fa-user"></i></th>
                                <td>{{name}}</td>
                                <td>{{position}}</td>
                            </tr>
                        </a>
                    {{/each}}
                {{/if}}
                </tbody>
            </table>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}