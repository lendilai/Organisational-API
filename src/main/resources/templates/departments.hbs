{{#partial "content"}}
    <div class="whole-page">
        <h2 class="deps-title text-center">Departments</h2>
        <hr>
        <i class="fas fa-plus for-user" data-toggle="modal" data-target="#basicExampleModal"> Add Department</i>

        <div class="modal fade right" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-side modal-top-right" role="document">
            <form action="/Departments/new" method="post">
                <div class="modal-dialog cascading-modal" role="document">
                    <div class="modal-content">
                        <div class="modal-header primary-color white-text">
                            <h4 class="title">
                                <i class="fas fa-building"></i> Department Info</h4>
                        </div>
                        <div class="modal-body">

                            <div class="md-form form-sm">
                                <i class="far fa-building"><strong> Department Name</strong></i>
                                <input type="text" name="department" class="form-control form-control-sm" placeholder="e.g. Tech" required>
                            </div>

                            <div class="md-form form-sm">
                                <i class="fas fa-info-circle"> Description / Mission</i>
                                <input type="text" name="desc" class="form-control form-control-sm" placeholder="e.g. Providing solutions for a brighter future" required>
                            </div>

                            <div class="md-form form-sm">
                                <i class="fas fa-users"> <strong> No. of employees</strong></i>
                                <input type="number" name="number" class="form-control form-control-sm" placeholder="e.g. 21" required>
                            </div>

                            <div class="text-center mt-4 mb-2">
                                <button class="btn btn-outline-primary" type="submit">Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            </div>
        </div>
        <div class="container-fluid allDeps">
            <div class="row">
                {{#if allDeps}}
                    {{#each allDeps}}
                        <div class="col-lg-4">
                            <a href="#">
                                <div class="card">
                                    <div class="view">
                                        <img src="https://www.urbansaints.org/images/legos.jpg" class="card-img-top img-fluid" alt="Departments">
                                        <div class="mask flex-center rgba-black-strong">
                                            <h2 class="white-text">{{name}}</h2>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p>{{description}}</p><br>
                                        <p class="animated headShake infinite">------->></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}